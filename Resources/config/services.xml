<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="samj.sluggable.slugger.class">SamJ\DoctrineSluggableBundle\Slug\Slugger</parameter>
        <parameter key="samj.sluggable.listener.class">SamJ\DoctrineSluggableBundle\Listener\SluggableListener</parameter>
    </parameters>

    <services>
        <service id="samj.sluggable.listener" class="%samj.sluggable.listener.class%" public="false">
            <tag name="doctrine.event_listener" event="prePersist" />
            <argument type="service" id="samj.sluggable.slugger" />
        </service>
		
        <service id="samj.sluggable.slugger" class="%samj.sluggable.slugger.class%"/>
    </services>
</container>
